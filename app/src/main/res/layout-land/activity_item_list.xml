<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:background="#676565"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/activityCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#2b2727"
        app:cardBackgroundColor="#FFD740">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/itemHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="Heading"
                android:textColor="#2b2727"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemHeading"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="Description1"
                android:textColor="#2b2727" />

            <TextView
                android:id="@+id/itemTimerView"
                android:layout_width="230dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="7dp"
                android:layout_toEndOf="@+id/itemDescription"
                android:background="#D0FFFFFF"
                android:maxLength="9"
                android:text="Description2"
                android:textAlignment="center"
                android:textColor="#2b2727"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageDelete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_delete_black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>